<h1> Questions Submitted for Assignment </h1>

<br><br>
<h4>Prompt 1: <%= @assignment.description%></h4> 
<br>
	<table class="table table-bordered">

		<thead>
			<th style="width: 53%">Question</th>
			<th style="width: 20%">Writer</th>
			<th style="width: 10%">Comments</th>
			<th style="width: 17%">Number of Upvotes</th>
		</thead>

		<tbody>
			<% @questions_flag_1.each do |question| %>
			<tr>
			<td><%= question.content %></td>
			<td><%= question.user.name %></td>
			<td><%= link_to 'Comments', {:controller => "questions", :action => "commentlist", :question => question.id} %></td>
			<td><% if question.ratings.count != 0%>
				<%=(question.votes.to_f / question.ratings.count) * 100%>% 
				<%end%> </td>
			<% end %>
		</tr>
		</tbody>

	</table>

