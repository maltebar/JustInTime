<h1> Questions submitted for assignment </h1>

<br>

	<table class="table table-bordered">

		<thead>
			<th style="width: 64%">Question</th>
			<th style="width: 19%">Writer</th>
			<th style="width: 17%">Number of Upvotes</th>
		</thead>

		<tbody>
			<% @questions.each do |question| %>
			<tr>
			<td><%= question.content %></td>
			<td><%= question.user.name %></td>
			<td><%= question.ratings.count%> </td>
			<% end %>
		</tr>
		</tbody>

	</table>

	<br><br>

<%= link_to 'Back to Assignments', assignments_path %>
