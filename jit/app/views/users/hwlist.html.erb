<h1> Student's Assignments </h1>

<br>

	<table class="table table-bordered">

		<thead>
			<th style="width: 20%">Assignment Title</th>
			<th style="width: 40%">Assignment Content</th>
			<th style="width: 40%">Question Submitted</th>
		</thead>

		<tbody>
			<% @questions.each do |question| %>
			<tr>
			<td><%=question.assignment.title%></td>
			<td><%=question.assignment.description%></td>
				<% if !question.content.nil? %>
					<td><%=question.content%></td>
				<% end %>
			<% end %>
		</tr>
		</tbody>

	</table>

	<br><br>

	<%= link_to 'Back to Users', users_path %>

