<h1> Student's assignments </h1>

<br>

	<table class="table table-bordered">

		<thead>
			<th>Assignment Title</th>
			<th>Assignment Content</th>
			<th>Question Submitted</th>
		</thead>

		<tbody>
			<% @questions.each do |question| %>
			<tr>
			<td><%=question.assignment.title%></td>
			<td><%=question.assignment.description%></td>
				<% if !question.content.nil? %>
					<td><%=question.content%></td>
				<% end %>
			<% end %>
		</tr>
		</tbody>

	</table>

	<br><br>

