<h1> Promoter Phase </h1>

<h5>The Promoter phase ends on <%= @assignment.promoter_due.strftime('%-B %-d, %Y at %I:%M%p')%>.</h5>

<br>
<br>
<% if @assignment.reveal_1? %>
<h3><%= @assignment.description%></h3>
<% done_1 = true%>
<%@evaluation_1.questions.shuffle.each do |question| %>
	<% if !question.ratings.where(user_id: @user.id).exists?
			done_1 = false
		end%>
<%end%>

<%if !done_1%>
	<table class="table table-bordered">

		<thead>
			<th style="width: 70%">Submission</th>
			<th style="width: 30%">Rating</th>
		</thead>

		<tbody>

			<%@evaluation_1.questions.shuffle.each do |question| %><tr>
			<% if !question.ratings.where(user_id: @user.id).exists? %>
				<td><%= question.content %></td>
				<td>
					<%= form_for(@rating) do |g| %>
					
						<%= g.hidden_field :user_id, value: @user.id %>
						<%= g.hidden_field :question_id, value: question.id %>

            			<p> <%= g.radio_button :discuss, true %> Discuss </p>
            			<p> <%= g.radio_button :discuss, false %> Don't Discuss </p>
            			<p> Optional Comment <br><%= g.text_area :comment, size: "36x2"%> </p>

            			<p> <%= g.submit "Save"%> </p>
            		<% end %>

				</td>
			<%end%></tr>
			<%end%>

		</tbody>
	
	</table>
	<%end%>
	<%end%>

<%if done_1%>
	<h5>You have completed all the promotions for this prompt.</h5>
<%end%>


