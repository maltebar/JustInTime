<h1> Promoter Phase </h1>

<h5>The Promoter phase ends on <%= @assignment.promoter_due.strftime('%-m.%-d.%Y')%>.</h5>

<br>
<br>

<h4><%= @assignment.description%></h4>

	<table class="table table-bordered">

		<thead>
			<th>Question</th>
			<th>Rating</th>
		</thead>

		<tbody>
			<% @promoterquestions_1.shuffle.each do |question| %><tr>
			<% if !question.ratings.where(user_id: @user.id).exists? %>
				<td><%= question.content %></td>
				<td>
				<%#= form_for(question) do |f| %>
				<%# @rating = Rating.create(user_id: @user.id, question_id: question.id) %>


					<%= form_for(@rating) do |g| %>
						<%= g.hidden_field :user_id, value: @user.id %>
						<%= g.hidden_field :question_id, value: question.id %>
            			<p> <%= g.radio_button :discuss, true %> Discuss </p>
            			<p> <%= g.radio_button :discuss, false %> Pass </p>
            			<p> Optional Comment <br><%= g.text_area :comment%>  </p>
            			<%#= f.hidden_field :id, value: question.id %>
            			<p> <%= g.submit "Save"%> </p>
            	
            			<%#end%>
            		<% end %>

				</td>
			<%end%></tr>
			<%end%>

		</tbody>
	
	</table>

	<br>
<br>


